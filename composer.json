{
  "name": "solophp/http-client",
  "type": "library",
  "description": "PSR-18 HTTP client",
  "keywords": ["psr-18","php","http-client"],
  "license": "MIT",
  "authors": [
    {
      "name": "Vitaliy Olos",
      "email": "vedastudio@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
     "Solo\\HttpClient\\": "src/"
    }
  },
  "require": {
"php": "^8.1",
    "guzzlehttp/guzzle": "^7.10",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13",
    "phpstan/phpstan": "^2.1"
  },
  "scripts": {
    "cs": "phpcs --standard=PSR12 src/",
    "cs-fix": "phpcbf --standard=PSR12 src/",
    "phpstan": "phpstan analyse src --level=max"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
